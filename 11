#include <iostream>
#include <string>
#include <clocale>

using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");

	string str;

	cout << "A = {a, b, c, d}. Введите слово P:" << endl;
	cin >> str;

	while (str.find("c") != string::npos) {
		for (int i = 0; i <= str.length(); ++i)
		if (str[i] == 'c'){
			str.erase(i, 1);
		break;
		}
	}

	str.replace(str.find("bb"), 2, "ddd");

	cout << str;

	return 0;
}
