#include <iostream>
#include <clocale>
#include <ctime>

using namespace std;

int random(int a, int b)
{
	srand(time(NULL));
	if (a > 0) return a + rand() % (b - a);
	else return a + rand() % (abs(a) + b);
}

int main()
{
	setlocale(LC_ALL, "Russian");
	int K;
	int X = random(1, 100);
	cout << "Попробуйте угадать число. У вас 7 попыток:" << endl;
	for (int i = 1; i <= 7; i++) {
		cout << i << "-я попытка" << endl;
		cin >> K;
		if (X != K) {
			if (K > X)
				cout << "Нужно число меньше, чем " << K << endl;
			else
				cout << "Нужно число больше, чем " << K << endl;
		}
		else {
			cout << "Вы отгадали число " << K << endl;
			return 0;
		}
	}
	cout << "Вы не отгадали число " << X;
	return 0;
}
